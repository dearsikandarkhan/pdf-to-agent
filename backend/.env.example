# ============================================================================
# PDF-to-Agent Configuration
# ============================================================================

# Application Settings
APP_NAME="PDF-to-Agent"
DEBUG=false
API_VERSION="v1"

# ============================================================================
# LLM Provider Configuration
# ============================================================================

# Default provider: "openai" or "ollama"
DEFAULT_LLM_PROVIDER="ollama"
DEFAULT_EMBEDDING_PROVIDER="ollama"

# ----------------------------------------------------------------------------
# OpenAI Configuration (if using OpenAI)
# ----------------------------------------------------------------------------
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4o-mini"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2000

# ----------------------------------------------------------------------------
# Ollama Configuration (if using Ollama - local/private)
# ----------------------------------------------------------------------------
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.2:3b"
OLLAMA_EMBEDDING_MODEL="nomic-embed-text"
OLLAMA_TEMPERATURE=0.3
OLLAMA_NUM_CTX=4096

# ----------------------------------------------------------------------------
# Anthropic Configuration (optional - future support)
# ----------------------------------------------------------------------------
ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"

# ============================================================================
# Document Processing Settings
# ============================================================================

# Chunking strategy: "fixed", "recursive", or "semantic"
CHUNKING_STRATEGY="recursive"
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# File upload limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=[".pdf"]

# ============================================================================
# Multi-Document Settings
# ============================================================================

MAX_DOCUMENTS_PER_SESSION=100
MAX_CHUNKS_PER_QUERY=10
TOP_K_PER_DOCUMENT=3
ENABLE_CROSS_DOC_SEARCH=true

# ============================================================================
# Vector Store Settings
# ============================================================================

VECTOR_STORE_TYPE="faiss"
SIMILARITY_THRESHOLD=0.7

# ============================================================================
# Storage Paths
# ============================================================================

STORAGE_DIR="./storage"
VECTOR_STORE_DIR="./storage/vector_store"
DOCUMENTS_DIR="./storage/documents"
METADATA_DIR="./storage/metadata"
MEMORY_DIR="./storage/memory"

# ============================================================================
# Session Settings
# ============================================================================

SESSION_EXPIRY_HOURS=24
